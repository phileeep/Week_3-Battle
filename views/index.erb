<!doctype html>

  <head>
    <meta charset="utf-8">
    <title>Please enter your name to start</title>
    <link href="<%= url("/styles.css") %>" rel="stylesheet" type="text/css"/>
  </head>

  <body>
    <div class="wrapper">
      <h1>Please Enter Your Name:</h1>
      <form action="/names" method="post">
        <ul>
          <li>
            <label for "p1_name" id="p1_name">Player 1 Name</label>
            <input type="text" name="p1_name">
          </li>
          <li>
            <label for "p2_name" id="p2_name">Player 2 Name</label>
            <input type="text" name="p2_name">
          </li>
          <li>
            <input class="submit" value="Submit" type="submit">
          </li>
        </ul>
      </form>
    </div>
  </body>
</html>